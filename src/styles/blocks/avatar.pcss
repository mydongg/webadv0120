.avatar{
    height: 250px;
    width: 250px;
    border-radius: 100%;
    overflow: hidden;
    position: relative;
    margin: 0 51px 51px;

    &--smol{
        height: 74px;
        width: 74px;
        min-height: 74px;
        min-width: 74px;
        margin: 0;
    }   

    &__img{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
}