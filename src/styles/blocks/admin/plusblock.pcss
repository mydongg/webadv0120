.plusblock{
    background: rgb(27,92,227);
    background: linear-gradient(90deg, rgba(27,92,227,1) 0%, rgba(63,53,203,1) 100%);
    width: 100%;
    height: 100%;
    position: relative;
    cursor: pointer;
    &__plus{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        font-size: 80px;
        font-weight: 100;
        transition: $basetr;
    }

    &__round{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 150px;
        height: 150px;
        border-radius: 100%;
        border: 3px solid #fff;
        transition: $basetr;
    }
    &__text{
        transition: $basetr;
        position: absolute;
        bottom: -35%;
        left: 50%;
        transform: translate(-50%,-50%);
        max-width: 150px;
    }

    &:hover{
        .plusblock__round{
            border-color: transparent;
        }

        .plusblock__plus{
            font-size: 180px;
        }

        .plusblock__text{
            font-size: 25px;
        }
    }
}


